{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": false,
    "skipLibCheck": true,
    
    // STRICT MODE - Maximum safety without developer hostility
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // RUNTIME SAFETY
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,  // CRITICAL: Forces null checks on arrays
    "forceConsistentCasingInFileNames": true,
    
    // TYPE SAFETY
    "useUnknownInCatchVariables": true,  // Catch blocks get 'unknown' not 'any'
    "exactOptionalPropertyTypes": true,  // undefined !== missing property
    
    // DELIBERATELY OFF (Too Annoying)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitOverride": false,
    "strictPropertyInitialization": false,
    "noPropertyAccessFromIndexSignature": false,
    
    // MODULE SETTINGS
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    
    // NEXT.JS
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    // PATH ALIASES
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/*.disabled/**", "**/*.disabled"]
}